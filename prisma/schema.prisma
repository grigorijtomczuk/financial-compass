generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id           Int    @id @default(autoincrement())
    login        String @unique
    passwordHash String

    tasks UserTask[]

    @@map("user")
}

model UserTask {
    id   Int    @id @default(autoincrement())
    text String

    creatorId Int
    creator   User @relation(fields: [creatorId], references: [id])

    @@map("user_task")
}
